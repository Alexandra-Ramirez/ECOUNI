<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/reciclaje_bg"
    tools:context=".presentation.view.FeedbackActivity">

    <LinearLayout
        android:background="@color/menuFeedback"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <ImageView
            android:onClick="back"
            android:layout_gravity="center_vertical"
            android:id="@+id/imageView3"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="48dp"
            android:layout_weight="0"
            app:srcCompat="@drawable/ic_arrow_back_white"
            android:contentDescription="@string/back" />
        <TextView
            android:layout_width="?attr/actionBarSize"
            android:layout_height="?attr/actionBarSize"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0"
            android:fontFamily="sans-serif-smallcaps"
            android:text="@string/feedback"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="30sp" />
        <ImageView
            android:contentDescription="@string/feedback"
            android:layout_gravity="center_vertical"
            android:id="@+id/imageView"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="36dp"
            android:layout_weight="0"
            app:srcCompat="@drawable/ic_chat_bubble_outline_black_24dp" />
        <TextView
            android:layout_width="?attr/actionBarSize"
            android:layout_height="?attr/actionBarSize"
            android:layout_weight="1"/>
        <ImageView
            android:onClick="send"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_send_white_24dp"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="0"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:padding="18dp"
                android:layout_marginTop="18dp"
                android:layout_marginStart="18dp"
                android:layout_marginEnd="18dp"
                android:background="@drawable/background_verde"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/feeback_1"
                    android:textColor="@android:color/white"
                    android:textSize="18sp" />

                <EditText
                    android:padding="6dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/background_white"
                    android:id="@+id/novedades"
                    android:lines="3"
                    android:gravity="top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:padding="18dp"
                android:layout_marginTop="18dp"
                android:layout_marginStart="18dp"
                android:layout_marginEnd="18dp"
                android:background="@drawable/background_verde"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:text="@string/feedback_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:padding="6dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/background_white"
                    android:id="@+id/premios"
                    android:lines="3"
                    android:gravity="top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginTop="18dp"
                android:layout_marginStart="18dp"
                android:layout_marginEnd="18dp"
                android:padding="18dp"
                android:background="@drawable/background_verde"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:text="@string/feedback_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:padding="6dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/background_white"
                    android:id="@+id/otros"
                    android:lines="3"
                    android:gravity="top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</LinearLayout>